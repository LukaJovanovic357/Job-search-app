{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types"],
        "types": ["vitest"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "tests/**/*.ts"],
    "exclude": ["node_modules"]
}

